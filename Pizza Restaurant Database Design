    USER_PASSWORD VARCHAR (20),
    USER_EMAIL_ADDRESS VARCHAR (30),
    USER_NAME VARCHAR (15),
    USER_SURNAME VARCHAR (20),
    USER_STREET_NUMBER VARCHAR (4),
    USER_STREET_NAME VARCHAR (20),
    USER_SUBURB VARCHAR (20),
    USER_CITY VARCHAR (20),
    USER_ROLE VARCHAR (5)  
);

